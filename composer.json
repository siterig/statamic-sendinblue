{
    "name": "siterig/sendinblue",
    "license": "proprietary",
    "type": "statamic-addon",
    "require": {
        "php": "^8.2",
        "edalzell/forma": "^3.0",
        "laravel/framework": "^10.0 || ^11.0",
        "statamic/cms": "^4.0 || ^5.0",
        "getbrevo/brevo-php": "^2.0"
    },
    "description": "Subscribe your Statamic v5 contact form submissions straight into Brevo",
    "authors": [
        {
            "name": "Matt Stone",
            "email": "matt@rockandscissor.com",
            "homepage": "https://www.rockandscissor.com",
            "role": "Co-founder"
        },
        {
            "name": "Craig Bowler",
            "email": "craig@rockandscissor.com",
            "homepage": "https://www.rockandscissor.com",
            "role": "Co-founder"
        },
        {
            "name": "Jamie McGrory",
            "role": "Consultant Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "SiteRig\\Brevo\\": "src"
        }
    },
    "extra": {
        "statamic": {
            "name": "Brevo",
            "description": "Brevo addon for Statamic"
        },
        "laravel": {
            "providers": [
                "SiteRig\\Brevo\\ServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    }
}
